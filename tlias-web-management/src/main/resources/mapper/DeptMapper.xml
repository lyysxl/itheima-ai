<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.tliaswebmanagement.mapper.DeptMapper">
    <!--
        查询所有部门信息
        @return List<Dept> 部门对象列表，按更新时间降序排列
    -->
    <select id="findAll" resultType="com.itheima.tliaswebmanagement.pojo.Dept">
        select id, name, create_time, update_time from dept order by update_time desc
    </select>

    <!--
        根据ID删除部门信息
        @param id 部门ID
    -->
    <delete id="deleteById">
        delete from dept where id = #{id}
    </delete>

    <!--
        新增部门信息
        @param name 部门名称
    -->
    <insert id="insert">
        insert into dept (name, create_time, update_time) values (#{name}, #{createTime}, #{updateTime})
    </insert>

    <!--
        根据ID查询部门详细信息
        @param id 部门ID
        @return Dept 部门对象
    -->
    <select id="selectById" resultType="com.itheima.tliaswebmanagement.pojo.Dept">
        select id, name, create_time, update_time from dept where id = #{id}
    </select>

    <!--
        更新部门信息
        @param id 部门ID
        @param name 部门名称
    -->
    <update id="update">
        update dept set name = #{name} where id = #{id}
    </update>

</mapper>