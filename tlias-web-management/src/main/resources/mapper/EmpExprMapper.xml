<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.tliaswebmanagement.mapper.EmpExprMapper">
    <!--
        批量插入员工工作经历信息
        @param exprList 员工工作经历对象列表，包含员工ID、开始时间、结束时间、公司名称、职位信息
        @return 插入成功的记录数
    -->
    <insert id="insertBatch">
        insert into emp_expr(emp_id, begin, end, company, job)
        values
        <foreach collection="exprList" item="expr" separator=",">
            (#{expr.empId}, #{expr.begin}, #{expr.end}, #{expr.company}, #{expr.job})
        </foreach>
    </insert>

    <!--
        根据员工ID查询工作经历信息
        @param empId 员工ID
        @return 员工工作经历信息列表，包含员工ID、开始时间、结束时间、公司名称、职位信息
    -->
    <select id="selectByEmpId" resultType="com.itheima.tliaswebmanagement.pojo.EmpExpr">
        select emp_id, begin, end, company, job
        from emp_expr
        where emp_id = #{empId}
    </select>

    <!--
        根据员工ID更新工作经历信息
        @param empId 员工ID
        @param begin 工作开始时间
        @param end 工作结束时间
        @param company 公司名称
        @param job 职位信息
        @return 更新的记录数
    -->
    <update id="updateById">
        update emp_expr
        <set>
            <if test="begin != null">
                begin = #{begin},
            </if>
            <if test="end != null">
                end = #{end},
            </if>
            <if test="company != null">
                company = #{company},
            </if>
            <if test="job != null">
                job = #{job},
            </if>
        </set>
        where emp_id = #{empId}
    </update>

    <!--
        根据员工ID删除员工表达式记录
        @param empId 员工ID
        @return 受影响的行数
    -->
    <delete id="deleteByEmpId">
        delete from emp_expr
        where emp_id = #{empId}
    </delete>

</mapper>